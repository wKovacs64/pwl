{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "types": ["cypress", "@testing-library/cypress", "cypress-axe"],
    "typeRoots": ["node_modules/@types", "./src/@types"],
    // TODO: remove once Cypress types are sorted out
    "skipLibCheck": true
  },
  "exclude": [".cache", "public"]
}
